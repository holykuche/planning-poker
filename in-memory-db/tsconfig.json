{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
