{
  "private": true,
  "name": "@holykuche/planning-poker",
  "version": "1.0.0",
  "description": "Planning Poker by Holy Kuche",
  "scripts": {
    "start:in-memory-db": "cd ./in-memory-db && yarn run start",
    "start:poker-in-memory-db": "cd ./in-memory-db && yarn run start-poker",
    "start:telegram-in-memory-db": "cd ./in-memory-db && yarn run start-telegram",
    "build-dev:in-memory-db": "cd ./in-memory-db && yarn run build-dev",
    "start:poker": "cd ./poker && yarn run start",
    "start:telegram": "cd ./telegram && yarn run start",
    "compile-no-emit:in-memory-db": "cd ./in-memory-db && tsc --noEmit",
    "compile-no-emit:poker": "cd ./poker && tsc --noEmit",
    "compile-no-emit:telegram": "cd ./telegram && tsc --noEmit",
    "install:in-memory-db": "cd ./in-memory-db && test -f package.json && yarn",
    "install:poker": "cd ./poker && test -f package.json && yarn",
    "install:telegram": "cd ./telegram && test -f package.json && yarn",
    "install": "run-p install:*",
    "copy-proto:in-memory-db": "rm ./in-memory-db/proto/* && cp \"./proto/db.proto\" ./in-memory-db/proto",
    "copy-proto:poker": "rm ./poker/proto/* && cp \"./proto/db.proto\" ./poker/proto && cp \"./proto/poker.proto\" ./poker/proto",
    "copy-proto:telegram": "rm ./telegram/proto/* && cp \"./proto/db.proto\" ./telegram/proto && cp \"./proto/poker.proto\" ./telegram/proto",
    "copy-proto": "run-p copy-proto:*",
    "fix": "gts fix",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/holykuche/planning-poker.git"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-unused-imports": "^4.1.3",
    "gts": "^5.3.1",
    "typescript": "^5.4.3",
    "yarn-run-all": "^3.1.1"
  }
}
